@{
    ViewData["Title"] = "Privacy Policy";
}

<section class="page-section cta">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <div class="cta-inner bg-faded text-center rounded">
                    <h2 class="section-heading mb-4">
                        <span class="section-heading-lower">Quote Calculator</span>
                    </h2>
                    <form id="quoteForm">
                        <label for="hours">Number of Hours Needed:</label>
                        <input type="number" id="hours" name="hours" min="0" required>

                        <label for="rate">Hourly Rate:</label>
                        <input type="text" id="rate" name="rate" value="50" readonly>

                        <input type="submit" value="Calculate Total">

                        <br />
                        <!-- Output box within the form -->
                        <input type="text" id="totalOutput" readonly>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

