@{
}
@model Movies

<section class="page-section cta">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <div class="cta-inner bg-faded text-center rounded">
                    <h2 class="section-heading mb-4">
                        <span class="section-heading-lower">Add a movie</span>
                    </h2>
                    <form method="post">
                        <input type="hidden" asp-for="MovieId" />
                        <div class="form-group row">
                            <label asp-for="CategoryID" class="col-sm-2 col-form-label">Category</label>
                            <div class="col-sm-10">
                                <select asp-for="CategoryID" class="form-control">
                                    <option value="">Select a Category</option>
                                    @foreach (Categories c in ViewBag.Categories)
                                    {
                                        <option value="@c.CategoryId">@c.Category</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Title" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Title" class="form-control" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Year" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Year" type="number" class="form-control" min="1888" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Director" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Director" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Rating" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <select asp-for="Rating" class="form-control">
                                    <option value="G">G</option>
                                    <option value="PG">PG</option>
                                    <option value="PG-13">PG-13</option>
                                    <option value="R">R</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Edited" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <div class="form-check form-check-inline">
                                    <input asp-for="Edited" class="form-check-input" type="radio" value="1">
                                    <label class="form-check-label">Yes</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="Edited" class="form-check-input" type="radio" value="0">
                                    <label class="form-check-label">No</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="LentTo" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="LentTo" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="CopiedToPlex" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <div class="form-check form-check-inline">
                                    <input asp-for="CopiedToPlex" class="form-check-input" type="radio" value="1">
                                    <label class="form-check-label">Yes</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input asp-for="CopiedToPlex" class="form-check-input" type="radio" value="0">
                                    <label class="form-check-label">No</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Notes" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Notes" class="form-control" maxlength="25">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <input type="submit" class="btn btn-primary" value="Add Movie">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>